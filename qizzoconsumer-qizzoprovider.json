{
  "consumer": {
    "name": "QizzoConsumer"
  },
  "provider": {
    "name": "QizzoProvider"
  },
  "interactions": [
    {
      "description": "a request for categories",
      "providerState": "there are categories",
      "request": {
        "method": "GET",
        "path": "/api/categories"
      },
      "response": {
        "status": 200,
        "headers": {
          "Content-Type": "application/json; charset=utf-8"
        },
        "body": {
          "success": true,
          "data": [
            {
              "id": "1",
              "name": "Night",
              "inreview": false
            }
          ]
        },
        "matchingRules": {
          "$.body.success": {
            "match": "type"
          },
          "$.body.data": {
            "min": 1
          },
          "$.body.data[*].*": {
            "match": "type"
          },
          "$.body.data[*].inreview": {
            "match": "type"
          }
        }
      }
    },
    {
      "description": "a request to create a new category",
      "providerState": "there are categories",
      "request": {
        "method": "POST",
        "path": "/api/categories",
        "headers": {
          "Content-Type": "application/json",
          "Accept": "application/json"
        },
        "body": {
          "name": "New Nightmare"
        }
      },
      "response": {
        "status": 201,
        "headers": {
        },
        "body": {
          "success": true,
          "data": {
            "id": "1",
            "name": "New Nightmare",
            "inreview": true
          }
        },
        "matchingRules": {
          "$.body.data.id": {
            "match": "type"
          }
        }
      }
    },
    {
      "description": "a request to create a category that already exists",
      "providerState": "there are categories",
      "request": {
        "method": "POST",
        "path": "/api/categories",
        "headers": {
          "Content-Type": "application/json",
          "Accept": "application/json"
        },
        "body": {
          "name": "Random"
        }
      },
      "response": {
        "status": 200,
        "headers": {
        },
        "body": {
          "success": false,
          "data": null
        }
      }
    },
    {
      "description": "a get request",
      "providerState": "there are question types",
      "request": {
        "method": "GET",
        "path": "/api/question-types"
      },
      "response": {
        "status": 200,
        "headers": {
        },
        "body": {
          "success": true,
          "data": [
            {
              "id": "0",
              "name": "question-type"
            }
          ]
        },
        "matchingRules": {
          "$.body.data": {
            "min": 1
          },
          "$.body.data[*].*": {
            "match": "type"
          }
        }
      }
    }
  ],
  "metadata": {
    "pactSpecification": {
      "version": "2.0.0"
    }
  }
}